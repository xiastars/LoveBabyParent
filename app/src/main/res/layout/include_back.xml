<?xml version="1.0" encoding="utf-8"?>

<com.summer.helper.view.resize.RLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_back"
    android:layout_width="55dp"
    android:layout_height="45dp"
    android:background="@drawable/common_click"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="11dp"
        android:background="@drawable/title_icon_return_black" />

    <TextView
        android:id="@+id/text_close"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />
</com.summer.helper.view.resize.RLinearLayout>