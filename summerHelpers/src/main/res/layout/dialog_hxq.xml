<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/so_white5"
        android:minHeight="120dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:background="@drawable/so_redd4_15_top" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:gravity="center"
            android:text="@string/tips"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey_33"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_margin="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:minHeight="40dp"
            android:textColor="@color/grey_33"
            android:textSize="@dimen/text_24" />

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/tv_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tips_cancel_tv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_marginBottom="@dimen/size_20"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tips_ok_tv"
                android:gravity="center"
                android:minWidth="94dp"
                android:text="@string/cancel"
                android:background="@drawable/so_white45_st_grey"
                android:textColor="@color/grey_33"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tips_ok_tv"
                android:layout_width="120dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/size_20"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:minWidth="94dp"
                android:padding="@dimen/size_5"
                android:text="@string/sure"
                android:background="@drawable/so_redd4_90"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>