<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_nav"
        android:layout_width="@dimen/size_500"
        android:layout_height="@dimen/size_500"
        android:background="@drawable/default_icon_triangle"
        android:maxHeight="@dimen/size_500" />

    <TextView
        android:id="@+id/tv_hint_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="呀，没有数据呢，刷新一下试试吧"
        android:textColor="@color/grey_99"
        android:textSize="@dimen/text_30" />

</LinearLayout>