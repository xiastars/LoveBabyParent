<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_parent"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nomore"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:text="没有更多内容了"
        android:textColor="@color/grey_99" />

    <LinearLayout
        android:id="@+id/ll_empty"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_nav"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/queshengye_wuneirong"
            android:maxHeight="@dimen/size_500" />

        <TextView
            android:id="@+id/tv_hint_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="这里除了我什么都没有~"
            android:textColor="@color/grey_d6"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>